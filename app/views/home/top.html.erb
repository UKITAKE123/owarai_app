<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>投稿フィード</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>お笑いどんへようこそ！</h1>
  <h2>～大喜利でつながるわらともの輪～</h2>
  <p>大喜利をはじめよう！</p>

  <%= link_to "新規登録",  signup_path, class: "btn btn-lg btn-warning" %>
</div>

<% end %>